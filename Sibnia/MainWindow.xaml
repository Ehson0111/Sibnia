<Window x:Class="Sibnia.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sibnia"
        mc:Ignorable="d"
        Title="База данных весы" Height="450" Width="800" Icon="/Resources/OIP.jpg">
    <Grid>
        <Grid.RowDefinitions>
            <!--<ColumnDefinition Height="50"/>-->
            <!--<ColumnDefinition Height="*"/>-->
            <RowDefinition Height="60"/>
 
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Grid Grid.Row="0" Background="#FF7979D2">
            <!--<TextBlock Conten></TextBlock>-->
            <!--<Label con-->
            <Button x:Name="btnBack"  HorizontalAlignment="Right"  Width="120" Content="Назад" Margin="0,21,10,10" Click="btnBack_Click"  />
            <Image Source="/Resources/logo-sibnia.jpg" HorizontalAlignment="Left" Margin="10"/>
        </Grid>
  
        <Frame x:Name="fr_content" Grid.Row="1" ContentRendered="fr_content_ContentRendered"  NavigationUIVisibility="Hidden" />
    </Grid>
    
</Window>
