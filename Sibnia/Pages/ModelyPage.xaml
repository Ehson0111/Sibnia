<Page x:Class="Sibnia.Pages.ModelyPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Sibnia.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="White"
      Title="ModelyPage" IsVisibleChanged="Page_IsVisibleChanged">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <ListView x:Name="employeesDataGrid" 
                  Grid.Row="0" 
                  Grid.ColumnSpan="2"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled" 
                  MouseDoubleClick="employeesDataGrid_MouseDoubleClick" 
                  SelectionMode="Single">
            <ListView.Resources>
                <Style TargetType="ListViewItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListViewItem">
                                <Border Name="Border" 
                                        BorderBrush="Transparent" 
                                        BorderThickness="1" 
                                        CornerRadius="5" 
                                        Margin="2"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="BorderBrush" Value="#FF0078D7"/>
                                        <Setter TargetName="Border" Property="BorderThickness" Value="2"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#F0F0F0"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListView.Resources>

            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Width="{Binding (FrameworkElement.ActualWidth), 
                           RelativeSource={RelativeSource AncestorType=ScrollContentPresenter}}"
                      IsItemsHost="True" />
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Gray" 
                            BorderThickness="1" 
                            CornerRadius="5" 
                            Margin="5" 
                            Padding="10" 
                            Width="200">
                        <StackPanel>
                            <TextBlock FontWeight="Bold">
                                <Run Text="Название модели: "/>
                                <Run Text="{Binding nazvanie_modeli}"/>
                            </TextBlock>
                            <TextBlock>
                                <Run Text="Номер модели: "/>
                                <Run Text="{Binding nomer_modeli}"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Кнопка для перехода к привязке весов -->
        <Button x:Name="SvyasVesyModel" 
                Content="Привязать весы" 
                Margin="10,5" 
                Grid.Row="1" 
                Grid.Column="0"
                HorizontalAlignment="Left"
                Padding="15,5"
                MinWidth="120"
                Click="joinmodel_Click"
                ToolTip="Выберите модель из списка выше"/>

        <!-- Кнопка для отображения привязанных весов -->
        <Button x:Name="SvyasView" 
                Content="Показать связы" 
                Margin="10,5" 
                Grid.Row="1" 
                Grid.Column="0"
                HorizontalAlignment="Center"
                Padding="15,5"
                MinWidth="120"
                Click="joinmodel_Click"
                ToolTip="Выберите модель из списка выше"/>

        <Button x:Name="adduser" 
                Content="Добавить модель" 
                Margin="10,5" 
                Grid.Row="1" 
                Grid.Column="1"
                HorizontalAlignment="Right"
                Padding="15,5"
                MinWidth="120"
                Click="adduser_Click"/>
    </Grid>
</Page>
